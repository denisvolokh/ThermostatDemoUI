// This provides tight control of the visual assets in the clock face skinpackage utils{  import flash.display.MovieClip;  import flash.filters.GlowFilter;    public class ClockFace extends MovieClip  {    // this contains the background graphics    public var clockBackground:MovieClip;        // quadrants - must be created by artist using 'quad1', 'quad2', etc. instance names in background clip    protected var quad1:MovieClip;    protected var quad2:MovieClip;    protected var quad3:MovieClip;    protected var quad4:MovieClip;        protected var __currentQuadrant:MovieClip;    protected var __prevQuad:int = -1;        protected var __glowFilter:Array;        public function ClockFace():void    {      super();            quad1 = clockBackground.quad1;      quad2 = clockBackground.quad2;      quad3 = clockBackground.quad3;      quad4 = clockBackground.quad4;            __glowFilter = [ new GlowFilter(0xffffff, 1, 10, 10, 2, 2) ];    }        // given a number of minuts in [0,59], set the active quadrant of the clock face    public function setQuadrant(_minutes:Number):void    {       if( !(quad1 && quad2 && quad3 && quad4) )        return;              if( _minutes <= 15 )      {        if( __prevQuad != 1 && __prevQuad != -1 )        {          __currentQuadrant.gotoAndStop("off");          __currentQuadrant.filters = [];        }                __currentQuadrant = quad1;        __prevQuad        = 1;      }      else if( _minutes <= 30 )      {        if( __prevQuad != 2 && __prevQuad != -1 )        {          __currentQuadrant.gotoAndStop("off");          __currentQuadrant.filters = [];        }                __currentQuadrant = quad2;        __prevQuad        = 2;      }      else if( _minutes <= 45 )      {        if( __prevQuad != 3 && __prevQuad != -1 )        {          __currentQuadrant.gotoAndStop("off");          __currentQuadrant.filters = [];        }                __currentQuadrant = quad3;        __prevQuad        = 3;      }      else      {        if( __prevQuad != 4 && __prevQuad != -1 )        {          __currentQuadrant.gotoAndStop("off");          __currentQuadrant.filters = [];        }                __currentQuadrant = quad4;        __prevQuad        = 4;      }            __currentQuadrant.gotoAndStop("on");      __currentQuadrant.filters = __glowFilter;    }  }}